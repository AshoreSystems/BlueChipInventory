<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bluechip.inventory">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application

        android:allowBackup="true"
        android:icon="@drawable/bluechip_log"
        android:label="@string/app_name"
        android:supportsRtl="true"

        >
        <activity
            android:name="com.bluechip.inventory.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            >


        </activity>
        <activity
            android:name="com.bluechip.inventory.activity.InventoryActivity"
            android:label="@string/inventory"
            android:screenOrientation="portrait"
            android:theme="@style/MyCustomTheme"
            android:windowSoftInputMode="stateHidden"
            />

        <activity
            android:name="com.bluechip.inventory.activity.AboutUsActivity"
            android:label="@string/activity_title_about_us"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.bluechip.inventory.activity.PrivacyPolicyActivity"
            android:label="@string/activity_title_privacy_policy"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.bluechip.inventory.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.bluechip.inventory.activity.ForgetPasswordActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent"
            >


        </activity>


        <activity
            android:name="com.bluechip.inventory.activity.LoginActivity"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity
            android:name="com.bluechip.inventory.activity.LoginActivity1"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            />


        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="676cfe0dfce35ae82220511813c5f53a02761848"
            />
    </application>

</manifest>