<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/color_grey_dark" />

            <solid android:color="@color/color_grey_dark" />
            <corners

                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp">
        </corners>
        </shape>
        
         <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        
        </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.5dp" android:color="@color/color_app_blue" />

            <solid android:color="@color/color_app_blue"/>
            <corners


                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" >
            </corners>
        </shape>
                 <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
    
        </item>

</selector>