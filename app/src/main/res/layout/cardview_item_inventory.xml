<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:id="@+id/cardView_layout"
                                    card_view:cardBackgroundColor="@color/white"
                                    card_view:cardCornerRadius="5dp"
                                    card_view:cardElevation="3dp"
                                    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/relLay_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/textView_inventory_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Snaks"
                android:layout_weight="2"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_job_title"
                />

            <TextView
                android:textIsSelectable="true"
                android:id="@+id/textView_inventory_sku"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Snaks"
                android:layout_weight="1"
                android:textColor="@color/color_app_blue"
                android:textSize="@dimen/text_job_details"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/icons_tag"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: "

                    android:textColor="@color/color_grey_dark"
                    android:textSize="@dimen/text_job_details"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/textView_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textColor="@color/color_grey_dark_text"
                    android:textSize="@dimen/text_job_details"
                    />
            </LinearLayout>

            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/color_grey_dark"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_scale"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: "
                    android:textColor="@color/color_grey_dark"
                    android:textSize="@dimen/text_job_details"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/textView_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/color_grey_dark_text"
                    android:textSize="@dimen/text_job_details"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical">

                <LinearLayout
                    android:id="@+id/linearlay_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/state_background"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:layout_gravity="center"

                        android:layout_margin="10dp"

                        android:src="@drawable/icons_edit"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>